{
    "name": "__MSG_extName__",
    "version": "1.0.0",
    "description": "__MSG_extDescription__",
    "default_locale": "en",
    "manifest_version": 3,
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.google.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon.png",
            "32": "images/icon.png",
            "48": "images/icon.png",
            "128": "images/icon.png"
        }
    },
    "options_page": "options/options.html",
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/*"
            ],
            "js": [
                "content/inject.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "modules/*.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
